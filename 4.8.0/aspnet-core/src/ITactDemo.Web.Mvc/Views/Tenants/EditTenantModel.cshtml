@using Abp.MultiTenancy
@using ITactDemo.MultiTenancy.Dto
@using ITactDemo.MultiTenancy
@using ITactDemo.Web.Models.Common.Modals
@model TenantDto

@section scripts
    {
    <environment names="Development">
        <script src="~/view-resources/Views/Tenants/_EditTenantModal.js" asp-append-version="true"></script>
    </environment>
}

<div class="row clearfix">
    <div class="col-lg-12">
        <div class="card">
            <div class="body">
                <form name="TenantEditForm" role="form" novalidate class="form-validation">
                    <input type="hidden" name="Id" value="@Model.Id" />
                    <div class="form-group form-float">
                        <div class="form-line">
                            <input class="form-control" type="text" name="TenancyName" value="@Model.TenancyName" required maxlength="64" minlength="2">
                            <label class="form-label">@L("TenancyName")</label>
                        </div>
                    </div>
                    <div class="form-group form-float">
                        <div class="form-line">
                            <input type="text" name="Name" class="form-control" value="@Model.Name" required maxlength="128">
                            <label class="form-label">@L("Name")</label>
                        </div>
                    </div>
                    <div class="form-group form-float">
                        <div class="form-line">
                            <input type="text" name="Address" class="form-control" value="@Model.Address" required maxlength="128">
                            <label class="form-label">@L("Address")</label>
                        </div>
                    </div>
                    <div class="form-group form-float">
                        <div class="form-line">
                            <select class="form-control" asp-for="@Model.TenantType" asp-items="Html.GetEnumSelectList<TenantTypeEnum>()"></select>
                            <label class="form-label">@L("TenantType")</label>
                        </div>
                    </div>

                    <div class="form-group form-float">
                        <div class="">
                            <input id="isactive" type="checkbox" name="IsActive" value="true" @(Model.IsActive ? "checked" : "") class="form-control" />
                            <label for="isactive" class="form-label">@L("IsActive")</label>
                        </div>
                    </div>
                    <button type="button" id="btnSave" class="btn btn-primary">@L("Save")</button>
                    <button type="button" id="btnCancel" class="btn btn-danger">@L("Cancel")</button>
                </form>
            </div>
        </div>
    </div>
</div>
