@using ITactDemo.ItemTables
@model ITactDemo.Web.Models.ItemTables.CreateOrupdateItemTableViewModel

@section Scripts
    {
<environment names="Development">
    <script src="~/view-resources/Views/ItemTables/_CreateOrUpdateItemTable.js"></script>
    <script src="~/lib/Jcrop/js/Jcrop.js"></script>
    

</environment>
    <environment names="Production,Staging">

    </environment>
}

@section Styles
    {
    <environment names="Development">
        <link href="~/lib/Jcrop/css/Jcrop.css" rel="stylesheet" />
    </environment>
    <environment names="Production,Staging">

    </environment>
}

<div class="row clearfix">
    <div class="col-lg-12">
        <div class="card">
            <div class="body">
                <form name="ItemForm">
                    @Html.Hidden("Id", Model.ItemTables.Id, new { @id = "id" })
                    <div class="form-group row">
                        <div class="col-md-6">
                            <label>@L("Name")</label>
                            @Html.TextBox("Name", Model.ItemTables.Name, new { @class = "form-control" })
                        </div>
                        <div class="col-md-6">
                            <label>@L("Price")</label>
                            @Html.TextBox("Price", Model.ItemTables.Price, new { @class = "form-control" })
                        </div>
                    </div>
                    <div class="form-group row">
                        <div class="col-md-6">
                            <label>@L("CategoryId")<span><small> (Range:1 To 6)</small></span></label>
                            @Html.TextBox("CategoryId", Model.ItemTables.CategoryId, new { @class = "form-control" })
                            
                        </div>
                    </div>


                    <div class="form-group row">
                        <div class="col-md-6">
                            <label>@L("Image")</label>
                            <input type="file" id="fileUpload" />
                        </div>
                    </div>
                    <div class="form-group row">
                        <div class="col-md-6">
                            <table border="0" cellpadding="0" cellspacing="5">
                                <tr>
                                    <td>
                                        <img id="Image" src="" alt="" style="display: none" />
                                    </td>

                                    <td>
                                        <canvas id="canvas" height="4" width="4"></canvas>
                                    </td>
                                </tr>
                            </table>
                        </div>
                    </div>

                    <div class="row">&nbsp;</div>
                    <div class="form-group row">
                        <div class="col-md-12">
                            <input type="button" id="btnCrop" value="Crop" style="display: none" />
                            <input type="hidden" name="imgX1" id="imgX1" />
                            <input type="hidden" name="imgY1" id="imgY1" />
                            <input type="hidden" name="imgWidth" id="imgWidth" />
                            <input type="hidden" name="imgHeight" id="imgHeight" />
                            <input type="hidden" name="imgCropped" id="imgCropped" />
                            <input type="hidden" name="Image" id="hdnFileType" />
                        </div>
                    </div>

                    <button type="button" id="btnSave" class="btn btn-success">@L("Save")</button>
                    <button type="button" id="btnCancel" class="btn btn-danger">@L("Cancel")</button>
                </form>
        </div>
        </div>
    </div>
</div>
