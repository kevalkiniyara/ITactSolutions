@model EmployeePortal.Models.EmployeeModel;
@using EmployeePortal.Models;
@{
    ViewData["Title"] = "UpdateDetail";
}

<h2>UpdateDetail</h2>
<style>
    .center {
        margin: auto;
        font-size: medium;
        width: 20%;
        padding: 10px;
    }

    input[type=text], select {
        width: 100%;
        padding: 6px 10px;
        margin: 8px 0;
        display: inline-block;
        border: 1px solid #ccc;
        border-radius: 4px;
        box-sizing: border-box;
    }

    input[type=submit] {
        width: 100%;
        background-color: #4CAF50;
        color: white;
        padding: 7px 10px;
        margin: 8px 0;
        border: none;
        border-radius: 4px;
        cursor: pointer;
    }

        input[type=submit]:hover {
            background-color: #45a049;
        }

    div {
        border-radius: 5px;
        background-color: #f2f2f2;
        padding: 5px;
    }
</style>
<form asp-action="UpdateDetail" method="post">
    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
    <div>
        <p>
            <input asp-for="EmployeeId" name="ID" hidden="hidden" value="@Model.EmployeeId">
        </p>
    </div>
    <div>
        @Html.ValidationMessage("EmployeeName", "Field is required.", new { @class = "text-danger" })<br />
        <label asp-for="EmployeeName"></label>
        <input asp-for="EmployeeName" value="@Model.EmployeeName" />
    </div>

    <div>
        @Html.ValidationMessage("EmployeeAddress", "Field is required.", new { @class = "text-danger" })<br />
        <label asp-for="EmployeeAddress"></label>
        <input asp-for="EmployeeAddress" value="@Model.EmployeeAddress" />
    </div>

    <div>
        <label asp-for="BirthDate"></label>
        <input asp-for="BirthDate" value="@Model.BirthDate" />
    </div>

    <div>
        @Html.ValidationMessage("MobileNumber", "Field is required.", new { @class = "text-danger" })<br />
        <label asp-for="MobileNumber"></label>
        <input asp-for="MobileNumber" value="@Model.MobileNumber" />
    </div>

    <div>
        <input type="submit" value="Save" />
    </div>

</form>

